{
	"manifest_version": 2, 
	"name": "Encriptext", 
	"version": "0.1", 
	"description": "an application that encript text based on asymetrical criptography", 
    "content_scripts":[
        {
            "js": ["content.js"],
            "matches" : [
                "*://*"
            ],
            "popup": "popup.html", 
            "all_frames": true
        }
    ],
	"permissions": [
		"storage",
        "contextMenus"
	],
    "background": {
        "persistent": false, 
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icon.png", 
        "default_popup": "popup.html"
    }
}
